<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEBC10"
    tools:context="com.example.android.app.khayapopularmovies.MainActivity">

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/progress"/>
    <!-- TODO SUGGESTION Put sizes in dimens.xml -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/error"
        android:text="@string/error_msg"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"/>
    <!-- TODO SUGGESTION It is advised to use SP instead of DP for text size (as discussed in class) -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEBC10">
    </android.support.v7.widget.RecyclerView>

</FrameLayout>
